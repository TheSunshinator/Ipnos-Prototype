<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android = "http://schemas.android.com/apk/res/android"
              xmlns:tools = "http://schemas.android.com/tools"
              android:layout_width = "match_parent"
              android:layout_height = "wrap_content"
              android:padding = "8dp"
              android:background = "@android:color/transparent"
              android:gravity = "center"
              android:orientation = "horizontal"
              tools:context = "com.sunshinator.ipnosprototype.display.MelodyPlayerActivity">

  <FrameLayout
    android:layout_width = "0dp"
    android:layout_height = "wrap_content"
    android:layout_weight = "1">
    <com.sunshinator.ipnosprototype.view.ToggleButton
      android:id = "@+id/play"
      android:layout_width = "wrap_content"
      android:layout_height = "wrap_content"
      android:layout_gravity = "center"
      android:background = "@android:color/transparent"
      android:drawableTop = "@drawable/toggle_play_pause"
      android:onClick = "onPlayOrPause"
      android:text = "@string/btn_play"
      android:textColor = "@color/text_menu_bottom"
      android:textSize = "12sp"/>
  </FrameLayout>

  <FrameLayout
    android:layout_width = "0dp"
    android:layout_height = "wrap_content"
    android:layout_weight = "1">
    <com.sunshinator.ipnosprototype.view.ToggleButton
      android:layout_width = "wrap_content"
      android:layout_height = "wrap_content"
      android:layout_gravity = "center"
      android:background = "@android:color/transparent"
      android:drawableTop = "@drawable/button_clear"
      android:onClick = "onClear"
      android:text = "@string/btn_clear"
      android:textColor = "@color/text_menu_bottom"
      android:textSize = "12sp"/>
  </FrameLayout>

</LinearLayout>